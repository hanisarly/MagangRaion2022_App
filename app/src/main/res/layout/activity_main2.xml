<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:text="Kalkulator Gizi Harian"
        android:textColor="#00838F"
        android:textColorHighlight="#00695C"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_BB"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#009688"
                android:hint="BB(kg)"
                android:inputType="number"
                android:textSize="12dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_TB"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#009688"
                android:hint="TB(cg)"
                android:inputType="number"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_usia"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#009688"
                android:hint="Usia(Tahun)"
                android:inputType="number"
                android:textSize="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="Kategori Olahraga dalam 1 Minggu"
        android:textColor="#00838F"
        android:textColorHighlight="#00695C"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/kuantitas_olahraga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#69F0AE"
        android:entries="@array/kuantitas_olahraga"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:backgroundTint="#009688"
            android:text="Sarapan"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:backgroundTint="#009688"
            android:text="Siang"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:backgroundTint="#009688"
            android:text="Malam"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:backgroundTint="#009688"
            android:text="Cemilan"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <Spinner
        android:id="@+id/menu_makanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#69F0AE"
        android:entries="@array/menu_makanan"
        android:padding="10dp" />

   //Button ADD Item

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#009688"
        android:text="Berikutnya"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

</LinearLayout>
