<!--            app:layout_constraintStart_toStartOf="@id/tv_name"-->
<!--            app:layout_constraintEnd_toEndOf="@id/tv_name"-->
<!--            tools:text="Deskripsi"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>